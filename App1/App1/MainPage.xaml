             x:Class="App1.MainPage" BackgroundColor="Beige"
             Title="Поздравление другу">

    <StackLayout x:Name="stacklayout" VerticalOptions="CenterAndExpand" BackgroundColor="Beige">
        <Picker TextColor="Black" Title="Выбрать почту" x:Name="pickert" SelectedIndexChanged="picker_SelectedIndexChanged">
            <Picker.Items>
                <x:String>
                    jasskailja@gmail.com
                </x:String>
                <x:String>
                    maksimsimakov@gmail.com
                </x:String>
                <x:String>
                    denispetrov@gmail.com
                </x:String>
                <x:String>
                    danielparpauts@gmail.com
                </x:String>
                <x:String>
                    kristinapankova@gmail.com
                </x:String>
            </Picker.Items>
        </Picker>
        <Entry Placeholder="Тема сообщения" x:Name="EntrySubject" TextColor="Black"></Entry>
        <Picker TextColor="Black" Title="Выбрать поздравление" x:Name="picker" SelectedIndexChanged="picker_SelectedIndexChanged">
