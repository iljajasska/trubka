                <x:String>
                    Поздравляю с новым годом!
                </x:String>
                <x:String>
                    Поздравляю с пасхой!
                </x:String>
                <x:String>
                    Поздравляю с чем то еще!
                </x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Рандом" x:Name="randombutton" Clicked="randombutton_Clicked" BackgroundColor="White"></Button>
        <Button Text="Отправить" x:Name="ButtonSend" Clicked="ButtonSend_Clicked" BackgroundColor="White"></Button>
    </StackLayout>
</ContentPage>
